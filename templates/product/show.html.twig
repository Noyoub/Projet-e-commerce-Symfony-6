{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Luc'routy{% endblock %}

{% block content  %}

<div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-7 my-auto">
        <h3>{{ product.name }} </h3>
        <span class="product-page-price">{{ (product.prix / 100)|number_format(2, ',', '.' ) }} €</span> 
        <hr>
        <p>
            {{ product.description }}
        </p>    
        <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn btn-info">Ajouter au panier</a>

    </div>
</div>
    <hr>
    <h3>Vos produits préférés</h3>
    <p>Découvrez les produits les plus vendus.</p>

    <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div><!-- /.row -->
 
{% endblock %} 