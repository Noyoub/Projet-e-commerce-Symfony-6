{% extends 'base.html.twig' %}

{% block title %}Nous contacter - Luc'rousty{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <h2>Nous contacter</h2>
            <p>N'hésitez à prendre contact avec notre équipe, nous vous répondrons dans les meilleurs délais.</p>
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info">{{ message }}</div>
            {% endfor %}
            {{ form(form) }}
        </div>
        <div class="col-md-4">
            <img src="{{ asset('assets/img/contact.jpeg') }}" class="img-fluid" alt="Une équipe de passionnés"/>
        </div>
    </div>
{% endblock %}
